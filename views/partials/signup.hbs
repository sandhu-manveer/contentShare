<div class="signup-container">
    <div class="container">
        {{#if message.error}}
        <div id="signup-error" class="alert alert-danger">{{{message.error}}}</div>
        {{/if}}
        <div class="main-content row">
            <div class="col-md-4 col-md-offset-4">
                <form id="signup-form" action="/signup" method="post">
                    <div class="form-group">
                        <label>Username:</label>
                        <input type="text" name="username" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Email:</label>
                        <input type="text" name="email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Password:</label>
                        <input id="password" type="password" name="password" class="form-control" data-validation="length" data-validation-length="min8">
                    </div>
                    <div class="form-group">
                        <label>Confirm Password:</label>
                        <input id="password_confirm" type="password" name="password_confirm" class="form-control" data-validation="confirmation">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Sign Up" class="btn btn-primary">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>